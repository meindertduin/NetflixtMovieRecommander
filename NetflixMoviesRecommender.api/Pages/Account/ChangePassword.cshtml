@page
@model NetflixMoviesRecommender.api.Pages.Account.ChangePassword
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Change Password";
    Layout = "Shared/_Layout";
}


<div class="container">
    <div class="row justify-content-center align-content-center login-form">
        <div class="col-md-6">
            <h3>Login</h3>
            <form method="post">
                <input type="hidden" asp-for="PasswordChangeForm.ReturnUrl" value="@Model.PasswordChangeForm.ReturnUrl"/>
                <div class="form-group">
                    <a asp-page="/Account/Register" asp-route-returnUrl="@Model.PasswordChangeForm.ReturnUrl" class="btnForgetPwd">Register</a>
                </div>
                
                <div class="form-group">
                    <label class="form-label" for="userNameForm">UserName</label>
                    <span class="valSpan" asp-validation-for="PasswordChangeForm.UserName"></span>
                    <input type="text" class="form-control" id="userNameForm" placeholder="Your UserName *" asp-for="PasswordChangeForm.UserName"/>
                </div>
                <div class="form-group">
                    <label class="form-label" for="passwordForm">Password</label>
                    <span class="valSpan" asp-validation-for="PasswordChangeForm.Password"></span>
                    <input type="password" class="form-control" id="passwordForm" placeholder="Your Password *" asp-for="PasswordChangeForm.Password"/>
                    <span asp-validation-for="PasswordChangeForm.Password"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" for="newPasswordForm">New Password</label>
                    <span class="valSpan" asp-validation-for="PasswordChangeForm.NewPassword"></span>
                    <input type="password" class="form-control" id="newPasswordForm" placeholder="Your Password *" asp-for="PasswordChangeForm.NewPassword"/>
                    <span asp-validation-for="PasswordChangeForm.NewPassword"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" for="confirmNewPasswordForm">Confirm New Password</label>
                    <span class="valSpan" asp-validation-for="PasswordChangeForm.ConfirmNewPassword"></span>
                    <input type="password" class="form-control" id="confirmNewPasswordForm" placeholder="Your Password *" asp-for="PasswordChangeForm.ConfirmNewPassword"/>
                    <span asp-validation-for="PasswordChangeForm.ConfirmNewPassword"></span>
                </div>
                
                <div class="form-group">
                    <div class="row justify-content-center">
                        <input type="submit" class="btnSubmit" value="Login" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>